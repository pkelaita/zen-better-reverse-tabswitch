{
  "title": "Zen only: Ctrl+` -> Ctrl+Shift+Tab",
  "rules": [
    {
      "description": "In Zen, Ctrl+` sends Ctrl+Shift+Tab (tab switcher left)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^app\\.zen-browser\\.zen$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
